<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF3360DC"
        android:fitsSystemWindows="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diary"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="normal"
            android:typeface="serif"   />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What is to be done?"
                    android:textColor="#FF3360DC"
                    android:textSize="15dp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="normal" />


                <EditText
                    android:id="@+id/title_homework"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Task Here"
                    android:inputType="text"
                    android:textColor="#FF3360DC"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Due Date"
                    android:textColor="#FF3360DC"
                    android:textSize="15dp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/homework_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Today"
                    android:inputType="date"
                    android:textColor="#FF3360DC"
                    android:drawableRight="@drawable/calendar_date"
                    android:textSize="13dp" />



                <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Time not det(all day)"
                    android:layout_marginTop="5dp"
                    android:inputType="textMultiLine"
                    android:textColor="#FF3360DC"
                    android:textSize="13dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Repeat"
                    android:textColor="#FF3360DC"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="normal" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">


                    <Spinner
                        android:id="@+id/spin_class"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/repeat"
                        android:layout_weight="0.3">

                    </Spinner>
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add to List"
                    android:textColor="#FF3360DC"
                    android:textSize="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="normal" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:weightSum="1">


                    <Spinner
                        android:id="@+id/class_students"
                        android:layout_width="match_parent"
                        android:entries="@array/addlist"
                        android:layout_height="wrap_content"

                        android:layout_weight="0.2">

                    </Spinner>
                </LinearLayout>




            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:gravity="center"
            android:orientation="vertical">


            <Button
                android:id="@+id/btn_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/colorPrimary"
                android:text="Post"
                android:textAllCaps="false"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>